.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__edit-user
          =link_to new_group_path do
            = icon('fas', 'edit')
        %li.top-items__icons__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-title
            = group.name
          .group-last-message
